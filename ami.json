{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "subnet_id": "",
        "ami_users_shared": "",
        "source_ami": "ami-09e67e426f25ce0d7",
        "ssh_username": "ubuntu" 
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_users": "{{ user `ami_users_shared`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_description": "Ubuntu AMI for csye6225"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sleep 30",
                "sudo apt-get -qy upgrade",
                "sleep 30",
                "sudo apt-get -qy --no-install-recommends install nginx -y",
                "sudo apt-get -qy --no-install-recommends install curl -y",
                "sleep 30",
                "curl -sL https://deb.nodesource.com/setup_12.x | sudo -E bash -",
                "sleep 30",
                "sudo apt-get install -qy --no-install-recommends nodejs -y",
                "sudo apt-get install -qy --no-install-recommends unzip",
                "sudo apt-get clean",
                "sudo rm -rf /var/lib/apt/lists/*"
            ]
        }
    ]
}